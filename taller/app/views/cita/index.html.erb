<p id="notice"><%= notice %></p>

<h1 style="text-align: center">Cita</h1>

<table border="1" style="margin: 0 auto">
  <thead>
    <tr>
      <th>Consultorio</th>
      <th>Paciente</th>
      <th>Medico</th>
      <th>Fechacita</th>
      <th>Horainicio</th>
      <th>Horafin</th>
      <th>Motivocita</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.consultorio %></td>
        <td><%= citum.paciente %></td>
        <td><%= citum.medico %></td>
        <td><%= citum.fechaCita %></td>
        <td><%= citum.horaInicio %></td>
        <td><%= citum.horaFin %></td>
        <td><%= citum.motivoCita %></td>
        <td><%= link_to 'Mostrar', citum %></td>
        <td><%= link_to 'Editar', edit_citum_path(citum) %></td>
        <td><%= link_to 'Destruir', citum, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="text-align: center">
<%= link_to 'Nueva Cita', new_citum_path %>
</p>