<p id="notice"><%= notice %></p>

<h1 style="text-align: center">Pacientes</h1>

<table border="1" style="margin: 0 auto">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Fechanacimiento</th>
      <th>Numerodocumento</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombres %></td>
        <td><%= paciente.apellidos %></td>
        <td><%= paciente.fechaNacimiento %></td>
        <td><%= paciente.numeroDocumento %></td>
        <td><%= link_to 'Mostrar', paciente %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destruir', paciente, method: :delete, data: { confirm: 'Â¿Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="text-align: center">
<%= link_to 'Nuevo Paciente', new_paciente_path %>
</p>

